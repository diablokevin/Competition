<html>
<head>
    <title>DataV</title>

    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/umd/datav.map.vue.js"></script>
    <style>
        html, body, #app {
            width: 100%;
            height: 100%;
            margin: 0px;
            padding: 0px;
        }

        .border-box-content {
            color: rgb(66,185,131);
            font-size: 40px;
            font-weight: bold;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .box {
            display: flex;
        }

        .header {
            display: flex;
        }

        .innerbox {
            width: 10%;
        }

        .myheader {
            width: 100%;
            height: 10%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #title {
            font-size: 40px;
            color: rgb(66,185,131);
            text-align: center;
        }

        .content-box {
            display: flex;
            flex-direction: row;
            height: 89%;
            width: 100%;
        }

        .center_box {
            padding: 6px;
            margin: 5px;
            width: 25%;
            height: 98%;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border: 2px solid #96c2f1;
            /*background: #eff7ff ;*/
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
        }

        .left_box {
            margin: 5px;
            padding: 6px;
            border: solid;
            width: 40%;
            height: 98%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border: 2px solid #96c2f1;
            /*background: #eff7ff;*/
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
        }

        .right_box {
            margin: 5px;
            padding: 6px;
            border: solid;
            width: 40%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            border: 2px solid #96c2f1;
            /*background: #eff7ff;*/
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
        }

        .personalrank {
            height: 40%;
            width: 100%;
        }

        .box-title {
            color: white;
            width: 100%;
            text-align: center;
        }

        .eventrank {
            width: 100%;
            height: 60%;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .eventrank_item {
            margin: 5px;
            width: 45%;
            height: 28%;
        }
    </style>





</head>
<body>
    <div id="app">
        <dv-full-screen-container>
            <dv-scroll-board :config="config"  />
        </dv-full-screen-container>
    </div>

    <script>
        let arg = JSON.stringify({
            data: [
                ['行1列1', '行1列2', '行1列3'],
                ['行2列1', '行2列2', '行2列3'],
                ['行3列1', '行3列2', '行3列3'],
                ['行4列1', '行4列2', '行4列3'],
                ['行5列1', '行5列2', '行5列3'],
                ['行6列1', '行6列2', '行6列3'],
                ['行7列1', '行7列2', '行7列3'],
                ['行8列1', '行8列2', '行8列3'],
                ['行9列1', '行9列2', '行9列3'],
                ['行10列1', '行10列2', '行10列3']
            ]
        });
          var app = new Vue({
            el: '#app',
              data: {
                  config: JSON.parse(arg),
            },


        })



    </script>
</body>
</html>